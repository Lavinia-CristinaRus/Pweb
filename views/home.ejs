  <script>
    var e = document.getElementById("err").value;
    alert( e );
  </script>
  <% } %>
<title>Home</title>
<!-- CSS Files-->
<link rel="stylesheet" href="style.css">
<link rel="stylesheet" href="addtask_form.css">

</head>
<body style = "background-image: url('img.png'); background-size: 25%">
<!-- HEADER -->
<div style="background-color:#fff; box-shadow: 0 15px 8px 0 rgba(0, 0, 0, 0.2), 0 15px 20px 0 rgba(0, 0, 0, 0.2);">
<div class="row" style="width:100%;margin-left:300px">
	<div class = "col1"> 
