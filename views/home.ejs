			<h4><%=userdata.prenume %> <%=userdata.nume %></h4>
	</div>
	</div>
	<div class = "col2" style = "transform: translateX(30%);"> 
		<form action="/home" method="post">
			<button class = "btn-menu" >Log Out</button>
		</form>
	</div>
	
</div>

<div class="hr">
</div>
<div class="row">
	<div class="center" style="transform:translate(15%,-40%)">

		<a class = "btn-menu" href = "/availabletasks" target = "selection">Available Tasks</a>
		
		<a class = "btn-menu" href = "/mytasks" target = "selection">My Tasks</a>
		
		<% if(userdata.cod_rol !=0 ) { %>
			<a class = "btn-menu" href = "/addtask" target = "selection">Add Task</a>
		<% } %>
		<% if(userdata.cod_rol ==0 ) { %>
			<a class = "btn-menu" href = "/colleagues" target = "selection">Department Colleagues</a>
		<% } %>
		<% if(userdata.cod_rol !=0 ) { %>
			<a class = "btn-menu" href = "/colleagues" target = "selection">Volunteers</a>
		<% } %>
		<% if(userdata.cod_rol !=0 ) { %>
			<a class = "btn-menu" href = "/alltasks" target = "selection">All Tasks</a>
		<% } %>
	</div>
 </div>
 </div>
</div>
<div>
<div class="row" style = "background:rgb(247, 255, 253)">	
	<iframe style="width:100%; height:600px;overflow:auto;" name = "selection" src = "availabletasks">
	</iframe>
</div>

